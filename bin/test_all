use platform

if $platform:is-windows {
  xrepo install "mingw-w64 8.1.0"
  
  var pkg_info = (xrepo fetch --json mingw-w64 | from-json)
  var mingw_path = $pkg_info[0][artifacts][installdir]

  set paths = [
    ~/scoop/shims/
    $mingw_path/bin
  ]
}

xmake run --yes --verbose --diagnosis --group=tests
