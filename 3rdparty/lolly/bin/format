#!/usr/bin/env elvish

use platform

if (eq $platform:os windows) {
  set paths = [
    ~/scoop/shims/
    C:\Qt\Tools\mingw810_64\bin
    ~/scoop/apps/llvm/current/bin
  ]
} elif (eq $platform:os linux) {
  set paths = [
    /usr/lib/llvm-16/bin
    $E:HOME/bin
  ]	
} else {
}

# pin clang-format to 16.0.x
clang-format --version
clang-format -i **/*cpp
clang-format -i **/*hpp
clang-format -i **/*ipp
